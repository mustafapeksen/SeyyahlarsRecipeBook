<!-- Add header.ejs file -->
<%- include('partials/header.ejs') %>

    <div class="container">
        <div class="wrapped-body">
            <div class="meal">
                <% if (meals && meals.length> 0) { %>
                    <h2>Search for <%= search %> Meal</h2>
                    <% for (let meal of meals) { %>
                        <hr />
                        <!-- Meal name -->
                        <h3>
                            <!-- Add a clickable link to the meal name -->
                            <a class="h3-title" href="/getRecipe/<%= meal.id %>">
                                <%= meal.title %>
                            </a>
                        </h3>

                        <!-- Meal picture -->
                        <img src="<%= meal.image %>" alt="recipe Image">
                        <% } %>
                            <div class="page-number">
                                <% if (numberOfPages && numberOfPages> 0) { %>
                                    <% for (let i=1; i <=numberOfPages; i++) { %>
                                        <!-- Page number -->
                                        <a class="anchor number" href="/search/page-<%= i %>">
                                            <%= i %>
                                        </a>
                                        <% } %>
                            </div>
                            <% } %>
                                <% } else { %>
                                    <!-- If the product is not available, it gets this error -->
                                    <h2>Sorry. Try Again Later</h2>
                                    <% } %>
            </div>
        </div>
    </div>

    <!-- Add footer.ejs file -->
    <%- include('partials/footer.ejs') %>