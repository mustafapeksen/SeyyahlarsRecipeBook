<!-- Add header.ejs file -->
<%- include('partials/header.ejs') %>

    <div class="container">
        <div class="wrapped-body">
            <div class="meal">
                <% if (locals.name) { %>
                    <h2>Random Meal</h2>

                    <!-- Meal name -->
                    <h3>
                        <%=name%>
                    </h3>

                    <!-- Meal picture -->
                    <img src="<%=image%>" alt="recipe Image">

                    <h4>Summary </h4>

                    <p><%-summary%></p>

                    <h4>Instructions</h4>

                    <p><%-instructions%></p>
                    <% }else {%>

                        <!-- If the product is not available, it gets this error -->
                        <h2>Sorry. Try Again Later</h2>

                        <% } %>
            </div>
        </div>
    </div>

    <!-- Add footer.ejs file -->
    <%- include('partials/footer.ejs') %>